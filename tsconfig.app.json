/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",   // o "node16" si prefer√≠s
    "moduleDetection": "force",
    "useDefineForClassFields": false
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.mock.ts",
    "src/test.ts",
    "src/test-setup.ts",
    "**/jest-setup.ts"
  ]
}
